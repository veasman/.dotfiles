    then
        PS1="%B%{$fg[red]%}[%{$fg[yellow]%}%n%{$fg[green]%}@%{$fg[blue]%}%M %{$fg[magenta]%}%~%{$fg[red]%}] %{$fg[blue]%}git:(%{$fg[green]%}"$GIT_BRANCH"%{$fg[blue]%})%{$reset_color%}%b "
