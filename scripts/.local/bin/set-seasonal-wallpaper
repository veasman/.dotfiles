#!/usr/bin/env sh

MONTH=$(date +%b)
HOLLIDAY=""

case "${MONTH}" in
    "Jan") HOLLIDAY="normal" ;;
    "Feb") HOLLIDAY="normal" ;;
    "Mar") HOLLIDAY="normal" ;;
    "Apr") HOLLIDAY="normal" ;;
    "May") HOLLIDAY="normal" ;;
    "Jun") HOLLIDAY="normal" ;;
    "Jul") HOLLIDAY="normal" ;;
    "Aug") HOLLIDAY="normal" ;;
    "Sep") HOLLIDAY="halloween" ;;
    "Oct") HOLLIDAY="halloween" ;;
    "Nov") HOLLIDAY="christmas" ;;
    "Dec") HOLLIDAY="christmas" ;;
esac

$HOME/.local/bin/setbg "$HOME/.local/wallpapers/${HOLLIDAY}"
